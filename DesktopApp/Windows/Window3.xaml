<Window x:Class="DesktopApp.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="950" MinWidth="950">
    <Grid>
        <TextBlock x:Name="asd"/>
        <DataGrid x:Name="mainGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Специалист" Binding="{Binding account.FullName}"/>
                <DataGridTextColumn Width="*" Header="ПН" Binding="{Binding pn}"/>
                <DataGridTextColumn Width="*" Header="ВТ" Binding="{Binding vt}"/>
                <DataGridTextColumn Width="*" Header="СР" Binding="{Binding sr}"/>
                <DataGridTextColumn Width="*" Header="ЧТ" Binding="{Binding ct}"/>
                <DataGridTextColumn Width="*" Header="ПТ" Binding="{Binding pt}"/>
                <DataGridTextColumn Width="*" Header="СБ" Binding="{Binding sb}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
